{
    "login": {
      "title": "SIGN IN",
      "fields": [
        {
          "type": "text",
          "id": "login-username",
          "label": "Username or email address",
          "required": true
        },
        {
          "type": "password",
          "id": "login-password",
          "label": "Password",
          "required": true
        }
      ],
      "socialNetworks": [
        {"icon": "fab fa-rss"},
        {"icon": "fab fa-facebook-f"},
        {"icon": "fab fa-twitter"},
        {"icon": "fab fa-google-plus-g"},
        {"icon": "fab fa-linkedin-in"}
      ],
      "checkbox": {
        "id": "remember-me",
        "label": "Remember me"
      },
      "submitText": "SIGN IN"
    },
    "register": {
      "title": "REGISTER",
      "fields": [
        {
          "type": "email",
          "id": "register-email",
          "label": "Email address",
          "required": true
        },
        {
          "type": "password",
          "id": "register-password",
          "label": "Password",
          "required": true
        },
        {
          "type": "radio",
          "name": "role",
          "options": [
            {
              "id": "user",
              "label": "I am a user",
              "value": "user",
              "required": true
            },
            {
              "id": "marketer",
              "label": "I am a marketer",
              "value": "marketer",
              "required": true
            }
          ]
        }
      ],
      "submitText": "REGISTER"
    }
  }
  